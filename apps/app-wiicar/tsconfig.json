{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "view/*": ["view/*"],
      "pages/*": ["pages/*"],
      "utils/*": ["utils/*"],
      "styles/*": ["styles/*"]
    }
  },
}
